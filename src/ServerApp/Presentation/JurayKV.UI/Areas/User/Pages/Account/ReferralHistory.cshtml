@page
@model JurayKV.UI.Areas.User.Pages.Account.ReferralHistoryModel
@{
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">MY REFERRAL LIST</h3>


    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="table-responsive">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>S/N</th>
                        <th>
                            Fullname
                        </th>
                        <th>Phone Number </th>
                        <th>Verified </th>
                        <th>Date </th>
                        <th>Last LoggedIn </th>

                    </tr>
                </thead>
                @{
                    int sn = 0;
                }
                <tbody>
                    @foreach (var item in Model.UserData)
                    {
                        <tr>
                            <td>
                                @{
                                    sn++;
                                }
                                @sn
                            </td>
                            <td>

                                @Html.DisplayFor(modelItem => item.Fullname)

                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Verified)
                            </td>
                            <td>
                                @item.CreationUTC.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @item.LastLoggedInAtUtc
                            </td>


                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
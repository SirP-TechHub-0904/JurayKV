@model JurayKV.UI.Areas.User.Pages.Account.UpgradeTie2Model
@{
}
@if (Model.Tie2Request == JurayKV.Domain.Primitives.Enum.TieRequestStatus.Requested)
{
    <div class="card card-default">
        <div class="card-header">
            <h3 class="card-title">UPGRADE TO TIER 2</h3>

        </div>
        <div class="card-body">
            <div class="alert alert-info">
                <strong>Info!</strong> @Model.ResponseOnTieRequest
            </div>
        </div>
    </div>
}
else if (Model.Tie2Request == JurayKV.Domain.Primitives.Enum.TieRequestStatus.None || Model.Tie2Request == JurayKV.Domain.Primitives.Enum.TieRequestStatus.Cancelled)
{
    <div class="card card-default">
        <div class="card-header">
            <h3 class="card-title">UPGRADE TO TIER 2</h3>

        </div>

         <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="TieTwoRequestDto.Surname" class="control-label"></label>
                            <input asp-for="TieTwoRequestDto.Surname" class="form-control" id="upper" onkeyup="myUppercase()" required="required" />
                            <span asp-validation-for="TieTwoRequestDto.Surname" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TieTwoRequestDto.Firstname" class="control-label"></label>
                            <input asp-for="TieTwoRequestDto.Firstname" class="form-control" id="upper2" onkeyup="myUppercase2()" required="required" />
                            <span asp-validation-for="TieTwoRequestDto.Firstname" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TieTwoRequestDto.Lastname" class="control-label"></label>
                            <input asp-for="TieTwoRequestDto.Lastname" class="form-control" id="upper3" onkeyup="myUppercase3()" required="required" />
                            <span asp-validation-for="TieTwoRequestDto.Lastname" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TieTwoRequestDto.Address" class="control-label"></label>
                            <input asp-for="TieTwoRequestDto.Address" class="form-control" required="required" />
                            <span asp-validation-for="TieTwoRequestDto.Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="">Current State of your address</label>
                            <select asp-for="TieTwoRequestDto.State" class="form-control" id="states" asp-items="Model.ListStates" required="required">

                                <option>Please select a State</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="lgas">Current LGA of your address</label>
                            <select id="lgas" asp-for="TieTwoRequestDto.LGA" class="form-control" required="required">
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="TieTwoRequestDto.DateOfBirth" class="control-label">Date of Birth</label>
                            <input asp-for="TieTwoRequestDto.DateOfBirth" class="form-control" required="required" type="date" />
                            <span asp-validation-for="TieTwoRequestDto.BankName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TieTwoRequestDto.Occupation" class="control-label">Occupation</label>
                            <input asp-for="TieTwoRequestDto.Occupation" class="form-control" required="required" />
                            <span asp-validation-for="TieTwoRequestDto.Occupation" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TieTwoRequestDto.About" class="control-label"></label>
                            <textarea asp-for="TieTwoRequestDto.About" class="form-control" required="required"></textarea>
                            <span asp-validation-for="TieTwoRequestDto.About" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label for="">Select State of Origin</label>
                            <select asp-for="TieTwoRequestDto.StateOfOrigin" class="form-control" id="statesx" asp-items="Model.ListStatesOfOrigin" required="required">

                                <option>Please select state of origin</option>
                            </select>
                        </div>


                        <div class="form-group">
                            @if (!String.IsNullOrEmpty(Model.IdCard))
                            {
                                <img class="" style="max-height:200px;" src="@Model.IdCard" alt="User Avatar">

                            }
                        </div>

                        <div class="form-group">
                            <label class="control-label">Passport Photograph</label><br />
                            <input type="file" class="control-label" asp-for="passportfile" required="required" />
                        </div>
                        <div class="form-group">
                            @if (!String.IsNullOrEmpty(Model.Passport))
                            {
                                <img class="" style="max-height:200px;" src="@Model.Passport" alt="User Avatar">

                            }
                        </div>
                        <div class="form-group">
                            <label class="control-label">NIN ID Card</label><br />
                            <input type="file" class="control-label" asp-for="iDcardfile" required="required" />
                        </div>
                        <div class="form-group">
                            <label asp-for="TieTwoRequestDto.BankName" class="control-label">Bank Name</label>
                            <input asp-for="TieTwoRequestDto.BankName" class="form-control" />
                            <span asp-validation-for="TieTwoRequestDto.BankName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TieTwoRequestDto.AccountNumber" class="control-label">Account Number</label>
                            <input asp-for="TieTwoRequestDto.AccountNumber" class="form-control" />
                            <span asp-validation-for="TieTwoRequestDto.AccountNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TieTwoRequestDto.AccountName" class="control-label">Account Name</label>
                            <input asp-for="TieTwoRequestDto.AccountName" class="form-control" />
                            <span asp-validation-for="TieTwoRequestDto.AccountName" class="text-danger"></span>
                        </div>
                        

                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-primary" />
                            <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                        </div>
                    </form>
                </div>
            </div>


        </div>
        <div class="card-footer">
        </div>
    </div>
}
else if (Model.Tie2Request == JurayKV.Domain.Primitives.Enum.TieRequestStatus.Approved)
{
    <div class="card card-default">
        <div class="card-header">
            <h3 class="card-title">ALREADY A TIER 2</h3>

        </div>
        
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @*<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
        <script src="path/to/jquery.validate.js"></script>*@

    <script>
        $(document).ready(function () {
            $("#states").change(function () {
                console.log("check in");
                var stateId = $(this).val();
                console.log("check ID");
                console.log(stateId);


                // Make sure to wrap this code within a function or an event handler
                async function loadLGAs(stateId) {
                    try {
                        const response = await fetch(`/User/Account/CSA?handler=LGAs&stateId=${stateId}`, {
                            method: 'GET',
                            headers: {
                                'Content-Type': 'application/json; charset=utf-8'
                            },
                            // You can include other options here if needed
                        });

                        if (!response.ok) {
                            throw new Error(`HTTP error! Status: ${response.status}`);
                        }

                        const data = await response.json();
                        console.log(data);
                        // Assuming your response is an array of objects with 'text' and 'value' properties
                        $("#lgas").empty();
                        $.each(data, function (index, item) {
                            $("#lgas").append($('<option>').text(item.text).attr('value', item.value));
                        });
                    } catch (error) {
                        console.error('Error fetching LGAs:', error);
                    }
                }

                // Call the function with the desired stateId
                loadLGAs(stateId);


                console.log("check out");
                console.log(stateId);
            });
        });
    </script>

}

